{
  "name": "@pnpm/local-resolver",
  "version": "1.0.4",
  "description": "Resolver for local packages",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "lint": "tslint -c tslint.json --project .",
    "tsc": "tsc",
    "test": "npm run lint && preview && ts-node test --ts-node",
    "md": "mos",
    "prepublishOnly": "npm run tsc",
    "fix": "tslint -c tslint.json --project . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pnpm/local-resolver.git"
  },
  "keywords": [
    "pnpm",
    "resolver",
    "npm"
  ],
  "author": "Zoltan Kochan <z@kochan.io> (https://www.kochan.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pnpm/local-resolver/issues"
  },
  "homepage": "https://github.com/pnpm/local-resolver#readme",
  "dependencies": {
    "@pnpm/read-package-json": "1.1.1",
    "@pnpm/resolver-base": "^2.1.0",
    "@pnpm/types": "^2.0.0",
    "@types/graceful-fs": "^4.1.2",
    "@types/node": "^10.0.6",
    "graceful-fs": "4.1.15",
    "normalize-path": "3.0.0",
    "ssri": "6.0.1"
  },
  "devDependencies": {
    "@types/tape": "^4.2.31",
    "mos": "^2.0.0-alpha.3",
    "mos-plugin-readme": "^1.0.4",
    "package-preview": "^2.0.0",
    "tape": "^4.8.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.8.0",
    "typescript": "^3.0.0"
  },
  "mos": {
    "plugins": [
      "readme"
    ],
    "installation": {
      "useShortAlias": true
    }
  }
}
